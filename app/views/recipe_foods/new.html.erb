<div class="text-center">
  <%= form_with model: @recipe_food, url: recipe_recipe_foods_path, method: :post, local: true, scope: :recipe_food do |form| %>
    <div class="form-group">
      <%= form.select :food_id, options_for_select(@food_items), {}, { :class => 'mb-2 p-2' } %>
     </div>
    <div class="form-group">
      <%= form.text_field :quantity, placeholder:'Quantity',class:"mb-2" %>
    </div>
    <div class="form-group">
     <%= form.hidden_field :recipe_id, {value: @recipe.id} %>
    </div>
    <div>
      <%= form.submit class:"btn btn-outline-dark mt-2" %>
    </div>
  <% end %>
</div>
  