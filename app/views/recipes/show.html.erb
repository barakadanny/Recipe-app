<p style="color: green"><%= notice %></p>

<%= render @recipe %>

<div class="text-center">
  <% if @recipe.is_a?(Recipe) && @recipe.user_id == current_user.id %>
    <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "text-decoration-none" %> |
    <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @recipe.foods.each do |food| %>
      <%=render 'shared/table', name:food.name%>
    <% end %>
    </tbody>
    </table>

    <%= link_to 'Shopping List',recipe_recipe_foods_path(@recipe.id), class: "text-decoration-none"%><br>
    <%= link_to 'Add Ingredients',new_recipe_recipe_food_path(@recipe.id), class: "text-decoration-none"%><br>
  <% end %>
  <%= link_to "Back to recipes", recipes_path, class: "text-decoration-none" %>

</div>
